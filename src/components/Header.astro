---
import Navigation from "./Navigation.astro";
import Menu from "./Menu.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
    <nav>
        <div>
            <ThemeIcon />
            <Menu />
        </div>
        <Navigation />
    </nav>
</header>

<style>
    nav {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }
    div {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }
</style>
